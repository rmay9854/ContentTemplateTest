<?xml version="1.0" encoding="utf-8" ?>
<controls:HeaderFooterControl 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ContentTemplateTest.Controls"
             x:Class="ContentTemplateTest.Pages.MainPage"
             HeaderText="Main Page Header"
             ControlTemplate="{StaticResource HeaderFooterTemplate}">
    <StackLayout Margin="10">
        <Entry Placeholder="Enter username" />
        <Entry Placeholder="Enter password"
               IsPassword="True" />
        <Button Text="Login" />
    </StackLayout>
</controls:HeaderFooterControl>
